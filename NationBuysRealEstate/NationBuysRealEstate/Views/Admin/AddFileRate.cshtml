@model NationBuysRealEstate.FileRate

@{
    ViewBag.Title = "AddFileRate";
    Layout = null;
}

<button type="button" class="btn btn-sm btn-default pull-right" data-dismiss="modal">X</button>
<h2>AddFileRate</h2>

<form role="form" action="/Admin/UploadFileRate" method="post" enctype="multipart/form-data">
    
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="FileRates_Image">FileRates</label>
            @*@Html.LabelFor(model => model.FileRates_Image, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <label class="btn btn-file btn-primary" for="file4">
                    <input type="file" name="image" id="file4" style="display:block;" accept="image/*" onchange="loadFile4(event)" />
                    Choose Image
                </label>
                @*@Html.EditorFor(model => model.FileRates_Image, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.FileRates_Image, "", new { @class = "text-danger" })
            </div>
            <div class="thumbnail col-md-offset-3 col-md-7" style="margin-top:2%">
                <a href="#">
                    <label id="text4">No Image Choosen</label>
                    <img id="output4" />
                </a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info btn-md" />
            </div>
        </div>
    </div>
    </form>


    <script>
        var loadFile4 = function (event) {
            var reader = new FileReader();
            debugger;
            reader.onload = function () {
                var output = document.getElementById('output4');
                var output1 = document.getElementById('text4');
                output1.innerText = document.getElementById('file4').files[0].name;
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        };
    </script>
