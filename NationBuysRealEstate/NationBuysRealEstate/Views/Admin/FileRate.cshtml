@model IEnumerable<NationBuysRealEstate.FileRate>

@{
    ViewBag.Title = "FileRate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>FileRate</h2>

    <p>
        <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal0">Add New FileRate</button>
    </p>
    <table class="table">
        <tr>
            <th>
                <label class="control-label col-md-2" for="FileRates_Image">FileRates</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileRates_Image)
                </td>
                <td>
                    <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal_@item.Id">Update</button>
                    <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal1_@item.Id">Delete</button>
                    <div id="myModal_@item.Id" class="modal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body" style="margin-top:100px">
                                    @Html.Action("EditFileRate", "Admin", new { id = item.Id })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="myModal1_@item.Id" class="modal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content" style="margin-top:100px">
                                <div class="modal-body">
                                    @Html.Action("DeleteFileRate", "Admin", new { id = item.Id })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="myModal0" class="modal" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content" style="margin-top:100px">
                                
                                <div class="modal-body">
                                    @Html.Action("AddFileRate", "Admin", new { id = item.Id })
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }

    </table>
</div>